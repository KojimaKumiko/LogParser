<UserControl x:Class="LogParser.Views.LogDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogParser.Views"
        xmlns:s="https://github.com/canton7/Stylet"
        xmlns:vm="clr-namespace:LogParser.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d" 
        d:DataContext="{d:DesignInstance vm:LogDetailsViewModel}"
        Height="450" Width="800">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Test}" Width="250" Height="25" />

        <Button Grid.Row="1" Width="125" HorizontalAlignment="Right"
                Margin="0 0 10 0" Content="Close"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
    </Grid>
</UserControl>
